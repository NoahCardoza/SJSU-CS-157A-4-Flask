<!DOCTYPE html>
<html>

<head>
  <title>Locations</title>
  {% include "includes/head.html.j2" %}
</head>

<body>
  {% include "includes/nav.html.j2" %}
  <div class="container mt-5">
    <h1>Locations</h1>
    <table class="table">
      <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Address</td>
        <td>Description</td>
        <td>Long</td>
        <td>Lat</td>
      </tr>
      {% for location in locations %}
      <tr>
        <td scope="row"><a href="/locations/{{ location.id }}">{{ location.id }}</a></td>
        <td>{{ location.name }}</td>
        <td>{{ location.address }}</td>
        <td>{{ location.description }}</td>
        <td>{{ location.longitude }}</td>
        <td>{{ location.latitude }}</td>
      </tr>
      {% endfor %}
    </table>
    <a class="btn btn-primary float-end" href="{{ url_for('routes.locations.new') }}">New</a>
  </div>
</body>